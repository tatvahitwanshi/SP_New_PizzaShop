@model DataAccessLayer.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login Page";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/login.css">
     
    <title>Login Page</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row main-block p-0">

            <!-- Left Container -->
            <div class="col-lg-6 col-md-12 p-0 ">
                <img src="~/images/dominos_background.jpg" class="img-fluid pizza-img" alt="Responsive image"
                    >
            </div>

            <!-- Right Container -->
            <div class="col-lg-6 col-md-12 p-0 d-flex flex-col justify-content-center align-items-center"
                id="right-side">
                <div class="container " id="inner-right-container">
                    <div class="row">
                        <div class="col align-self-center d-flex justify-content-center">
                            <img src="~/images/logos/pizzashop_logo.png" alt="" class="logo-img">
                            <span class="h2 align-self-center" style="color: #0565A0;"> PIZZASHOP</span>
                            <partial name="~/Views/Shared/_Notification.cshtml" />
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col d-flex justify-content-start ">
                            <span class="h2">Welcome, </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <form id="loginForm" asp-controller="Login" asp-action="Login" method="post">
                                 <div class="mb-3">
                                    <div class="form-control p-0 d-flex align-items-center position-relative">
                                        <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1"placeholder="Email*">
                                         <i class="bi bi-person position-absolute h4 " style="right: 20px ; top: 5px;"></i>
                                    </div>
                                                            
                                    <div id="passwordError" class="error-message"> <span asp-validation-for="Email" class="text-danger"></span></div>
                                </div>
                                <div class="mb-3">
                                    <div class="form-control p-0 d-flex align-items-center position-relative">
                                        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1"
                                        placeholder="Password*">
                                        <i class="bi bi-eye position-absolute h4" id="eye" style="right: 20px ; top: 5px;" onclick="togglePassword()"></i>
                                    </div>
                                                            
                                    <div id="passwordError" class="error-message"> <span asp-validation-for="Password" class="text-danger"></span></div>
                                </div>
                             
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="exampleCheck1" asp-for="RememberMe">
                                    <label class="form-check-label" for="exampleCheck1" >Remember me</label>
                                    <a class="float-end" asp-controller="Login" asp-action="ForgotPasswordView" asp-route-Email="@Model?.Email" id="forgotPasswordLink">Forgot Password?</a>
                                </div>
                                <div class="mb-3">
                                   
                                    <button type="submit" class="btn btn-primary" 
                                        style="width: -webkit-fill-available;">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
<script src="~/js/login.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script>
  document.getElementById('forgotPasswordLink').addEventListener('click', function () {
    var email = document.getElementById('exampleInputEmail1').value;
    this.href = '@Url.Action("ForgotPasswordView", "Login")' + '?email=' + encodeURIComponent(email);
});
</script>
</html>
@section Scripts{
   
    <partial name="_ValidationScriptsPartial" />

}
