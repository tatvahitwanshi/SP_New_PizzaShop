@model DataAccessLayer.ViewModels.ForgetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/forgot.css">
    <title>Forgot Password Page</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row main-block p-0">
            <!-- Left Container -->
            <div class="col-lg-6 col-md-12 p-0 ">
                <img src="~/images/dominos_background.jpg" class="img-fluid pizza-img" alt="Responsive image">
            </div>
            <!-- Right Container -->
            <div class="col-lg-6 col-md-12 p-0 d-flex flex-col justify-content-center align-items-center"
                id="right-side">
                <div class="container " id="inner-right-container">
                    <div class="row">
                        <div class="col align-self-center d-flex justify-content-center">
                            <img src="~/images/logos/pizzashop_logo.png" alt="" class="logo-img">
                            <span class="h1 align-self-center" style="color: #0565A0;"> PIZZASHOP</span>
                            <partial name="~/Views/Shared/_Notification.cshtml" />

                        </div>
                    </div>
                    <div class="row ">
                        <div class="col d-flex justify-content-start ">
                            <span class="h3">Forgot Password</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <span class="text-muted">Enter your email and we'll send you a link to reset your
                                password</span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <form id="loginForm" asp-controller="Login" asp-action="ForgotPassword" method="post">
                                <div class="mb-3">
                                    <div class=" d-flex align-items-center position-relative">
                                        <input type="email" class="form-control" asp-for="@Model.Email"
                                            id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email*"
                                            value="@ViewData["Email"]">
                                        <i class="bi bi-person position-absolute h4"
                                            style="right: 20px ; top: 5px;"></i>
                                    </div>
                                    <div id="emailError" class="error-message"><span asp-validation-for="Email"
                                            class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary"
                                        style="width: -webkit-fill-available;">Send</button>
                                </div>

                            </form>
                            <div class="mb-3 ">
                                <a type="submit" class=" btn text-primary" asp-controller="Login" asp-action="LoginView"
                                    style="width: -webkit-fill-available;">Back to Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>