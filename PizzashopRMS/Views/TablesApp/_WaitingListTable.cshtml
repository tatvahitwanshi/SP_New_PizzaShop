@model IEnumerable<DataAccessLayer.ViewModels.TokenDetail>

@if(Model.Count() == 0)
{
    <div class="text-start mt-3">
        <span class="ms-3">No one is Waiting ......</span>
    </div>
}else
{
    <table class="table align-middle">
        <tbody class="fw-bold" style="font-size: 14px;">
            <tr>
                <td scope="col">
                    <input type="checkbox" hidden>
                </td>
                <td scope="col">ID</td>
                <td scope="col">Name</td>
                <td scope="col">No. of Persons</td>
            </tr>

            @foreach(var value in Model)
            {
                <tr class="opacity-75">
                    <td>
                        <input type="checkbox" class="form-check-input circular-checkbox token-checkbox m-0"
                               data-id = "@value.TokenId"
                               data-token-no = "@value.TokenNo"
                               data-customer-name = "@value.CustomerName"
                               data-email = "@value.Email"
                               data-phone = "@value.PhoneNo"
                               data-no-person = "@value.NoOfPerson"
                               onclick="TokenCheckboxChange(this)">
                    </td>
                    <td>#@value.TokenNo</td>
                    <td>@value.CustomerName</td>
                    <td>@value.NoOfPerson</td>
                </tr>
            }
        </tbody>
    </table>

}


