@model DataAccessLayer.ViewModels.WaitingToken

<div class="modal fade" id="waitingTokenModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content token-generate-modal">

            <form class="modal-body" method="post" id="waitingTokenForm">
                <input type="text" asp-for="TokenId" hidden>

                <div class="d-flex justify-content-between">
                    <div class="fw-bold fs-5 text-secondary">Waiting Token Details</div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>   
                </div>

                <div class="row pe-2 mt-2">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 form-floating mt-3">
                                <input type="email" class="form-control" id="tokenEmail" placeholder="Name" asp-for="CustomerEmail" oninput="completeAllDetails(this.value)" >
                                <label for="tokenEmail">Email*</label>
                                <span class="text-danger" asp-validation-for="CustomerEmail"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 form-floating mt-3">
                                <input type="text" class="form-control" id="tokenName" placeholder="Name" asp-for="CustomerName" >
                                <label for="tokenName">Name*</label>
                                <span class="text-danger" asp-validation-for="CustomerName"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 form-floating mt-3">
                                <input type="number" class="form-control mobile-input" id="tokenMobileNo" placeholder="Name" asp-for="MobileNo" >
                                <label for="tokenMobileNo">Mobile No.*</label>
                                <span class="text-danger" asp-validation-for="MobileNo"></span>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6 col-12 form-floating mt-3">
                                <input type="number" class="form-control" id="name" placeholder="Name" min="0" step="1" asp-for="NumberOfPersons">
                                <label for="name">No. of Person(s)*</label>
                                <span class="text-danger" asp-validation-for="NumberOfPersons"></span>
                            </div>
                            <div class="col-md-6 col-12 form-floating mt-3 px-md-0 mx-md-0 section-select">
                                <select class="form-select section-dis" id="sectionTypeDropdown" aria-label="" asp-for="SectionId" style="width: 100% !important;">
                                    <option disabled selected>Section</option>
                                    @if (Model.SectionList != null)
                                    {
                                        @foreach (var sections in Model.SectionList)
                                        {
                                            @if(sections.SectionId != 0)
                                            {
                                                <option value="@sections.SectionId">@sections.SectionName</option>
                                            }
                                        }
                                    }
                                </select>
                                <label for="sectionTypeDropdown" class="mx-0">Section*</label>
                                <span class="text-danger" asp-validation-for="SectionId"></span>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="d-flex justify-content-end mt-3">
                    <button type="submit" class="save-cancel-btn fw-semibold save-btn">Save</button>
                    <button type="button" class="save-cancel-btn fw-semibold cancel-btn" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>

        </div>
    </div>
</div>


<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
