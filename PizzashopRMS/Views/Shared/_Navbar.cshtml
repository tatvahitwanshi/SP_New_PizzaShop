<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/navbar.css">

    <title>Document</title>
</head>

<body>
    <!-- Navbar  -->
    <nav class="d-flex justify-content-between align-items-center px-2 ps-lg-0 py-lg-0 m-0 navbar">
        <img src="~/images/logos/sidebar-2.png" alt="" id="sidebar-logo"
            class="d-lg-none bg-white border rounded d-flex " data-bs-toggle="offcanvas" href="#offcanvasExample"
            role="button" aria-controls="offcanvasExample">
        <div class="d-flex company-logo  m-0 justify-content-center border-lg-rounded align-items-center ">
            <img src="~/images/logos/pizzashop_logo.png" alt="company-logo" id="company-logo-img"
                class="d-none d-lg-flex">
            <div class="h3 ps-3" id="company-name" style="display: flex; margin:0 !important;">PIZZASHOP</div>

        </div>
        <div class="btn-group ">
            @if (ViewBag.RoleNameForOrderApp == "account manager")
            {
                <a class="" style="text-decoration: none; justify-content: center; align-items: center; display:flex;" 
                   asp-action="TablesApp" asp-controller="TablesApp">
                    <i class="bi bi-phone text-white me-2 p-0 align-self-center mt-1" style="font-size: 2rem; margin:0 !important;"></i>
                </a>
            }
            <a class=" dropdown-toggle-split" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown"
                aria-expanded="false" style="text-decoration: none;">

                @* <img src="@Url.Content(@Context.Session.GetString("ProfilePic"))" alt="" id="profile-pic"> *@
                <img src=@((ViewBag.image != null) ? ViewBag.image : "/images/Default_pfp.svg.png") id="profile-pic"
                    alt="">
            </a>
           
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuLink">
                <li><a class="dropdown-item h6">
                        <img src=@((ViewBag.image != null) ? ViewBag.image : "/images/Default_pfp.svg.png") alt=""
                            id="profile-pic">
                        @ViewBag.email
                    </a>
                </li>
                <li><a class="dropdown-item" asp-action="UserProfileView" asp-controller="UserProfile"><i
                            class="bi bi-person-circle p-2"></i>My Profile</a></li>
                <li><a class="dropdown-item" asp-action="ChangePasswordView" asp-controller="UserProfile"><i
                            class="bi bi-arrow-clockwise p-2"></i>Change Password</a></li>
                <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><i
                            class="bi bi-box-arrow-right p-2"></i>Logout</a></li>
            </ul>
        </div>
    </nav>
</body>

</html>